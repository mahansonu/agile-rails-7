<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3"><%= t('.title') %></h2>
  <table class="table-auto">
    <%= render cart.line_items %>
    <tfoot>
      <tr>
        <th colspan="3" class="text-right pt-2 pr-2">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black"><%= number_to_currency cart.total_price %></td>
      </tr>
    </tfoot>
  </table>
  <div class="flex mt-1 gap-2">
    <%= button_to t('.empty'), cart, method: :delete, class: 'bg-green-600 text-white rounded-lg px-2 py-1' %>

    <%= button_to t('.checkout'), new_order_path, class: 'bg-green-200 text-black px-2 py-1 rounded-lg',method: :get %>
  </div>
</div>
